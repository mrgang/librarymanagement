<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="#ffffff"
                android:padding="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            android:id="@+id/tv"
            android:text="新用户注册"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/tv1"
            android:text="学号："
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/register_stu_number"
            android:layout_toRightOf="@+id/tv1"
            android:layout_alignTop="@+id/tv1"
            android:hint="输入学号"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:paddingRight="0dp"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv2"
            android:text="姓名："
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_below="@+id/tv1"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/register_stu_name"
            android:layout_toRightOf="@+id/tv2"
            android:layout_alignTop="@+id/tv2"
            android:hint="输入姓名"
            android:singleLine="true"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:paddingRight="0dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv3"
            android:text="密码："
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_below="@+id/tv2"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/register_stu_psw"
            android:layout_toRightOf="@+id/tv2"
            android:layout_alignTop="@+id/tv3"
            android:hint="输入密码"
            android:singleLine="true"
            android:paddingLeft="15dp"
            android:paddingRight="0dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv4"
            android:text="QQ："
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_below="@+id/tv3"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/register_stu_qq"
            android:layout_toRightOf="@+id/tv3"
            android:layout_alignTop="@+id/tv4"
            android:hint="输入qq号"
            android:paddingLeft="15dp"
            android:paddingRight="0dp"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_below="@+id/register_stu_qq"
            android:layout_width="match_parent"
            android:paddingTop="50dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/btn_submit"
                android:text="提   交"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#ccffcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>