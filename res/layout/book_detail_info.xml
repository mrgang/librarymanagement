<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#dfffdf"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:id="@+id/book_name"
            android:text="书籍名"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/author_name"
            android:text="作者"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/book_class_number"
            android:text="书类号"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/press"
            android:text="出版社"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/press_date"
            android:text="出版日期"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/book_content"
            android:text="目录介绍"
            android:paddingTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <RelativeLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tip1"
                android:text="库存总数："
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/txt_total_count"
                android:text="5"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:textColor="#00ff00"
                android:textSize="18sp"
                android:layout_toRightOf="@id/tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tip2"
                android:text="现存总数："
                android:layout_toRightOf="@id/txt_total_count"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/txt_real_count"
                android:text="5"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:textColor="#ff0000"
                android:textSize="18sp"
                android:layout_toRightOf="@id/tip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
            android:id="@+id/tv_lend"
            android:layout_gravity="center_horizontal"
            android:text="借\t\t阅"
            android:padding="20dp"
            android:textSize="20sp"
            android:textColor="#00dd00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>